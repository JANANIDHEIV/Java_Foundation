<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="org.ibn.bk.Book" table="BOOK_DETAILS">
      <id name="id" type="int" column="BOOK_ID">
         <generator class="increment"/>
      </id>
      <property name="author" column="AUTHOR_NAME" type="string"/>
      <property name="isbn" column="ISBN" type="string"/>
      <property name="publisher" column="PUBLISHER" type="String"/>
      <property name="price" column="PRICE" type="double"/>
      <property name="published" column="PUBLISHED_DATE" type="Date"/>

   </class>
</hibernate-mapping>